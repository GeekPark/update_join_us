{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js"
    ]
  },
  "options_ui": {
    "page": "./options.html",
    "chrome_style": true
  },
  "permissions": [
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://hr.lagou.com/corpPosition/*"
      ],
      "js": [
        "scripts/fetch.js"
      ]
    }
  ]
}
